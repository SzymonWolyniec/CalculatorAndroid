<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DisplayStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@id/klawiatura</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/display_background</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="KeyStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/teal_700</item>
    </style>

    <style name="KeyStyle.GrayDark">
        <item name="android:background">@drawable/button_selector_dark_gray</item>
    </style>

    <style name="KeyStyle.GrayLight">
        <item name="android:background">@drawable/button_selector_dark_light</item>
    </style>

    <style name="KeyStyle.Special">
        <item name="android:background">@drawable/button_selector_special</item>
    </style>

</resources>